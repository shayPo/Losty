<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/background"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_object"
        android:layout_marginRight="25dp"
        android:layout_marginTop="54dp"
        android:fontFamily="@font/notosanshebrewregular"
        android:textColor="@color/title_color"
        android:textSize="20.5sp"/>

    <TextView
        android:id="@+id/selected_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_object"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:drawableLeft="@drawable/arrow_drop_down"
        android:fontFamily="@font/notosanshebrewregular"
        android:textColor="@color/title_color"
        android:textSize="20.5sp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@color/colorPrimary"
        ></FrameLayout>

    <TextView
        android:id="@+id/title_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_location"
        android:layout_marginRight="25dp"
        android:layout_marginTop="74dp"
        android:fontFamily="@font/notosanshebrewregular"
        android:textColor="@color/title_color"
        android:textSize="20.5sp"/>

    <TextView
        android:id="@+id/selected_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="תל אביב"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:fontFamily="@font/notosanshebrewregular"
        android:textColor="@color/title_color"
        android:textSize="20.5sp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@color/colorPrimary"
        ></FrameLayout>

    <LinearLayout
        android:gravity="right"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="@font/notosanshebrewregular"
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:id="@+id/sprator"
            android:visibility="gone"
            android:background="@android:color/black"
            android:layout_width="1dp"
            android:layout_height="match_parent"></FrameLayout>

        <TextView
            android:fontFamily="@font/notosanshebrewregular"
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView

            android:fontFamily="@font/notosanshebrewregular"
            android:id="@+id/number_of_results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/results_display"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

</LinearLayout>