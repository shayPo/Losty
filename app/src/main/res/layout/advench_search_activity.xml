<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/top_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/search_public_transportation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/search_public_transportation"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>

            <FrameLayout
                android:visibility="gone"
                android:id="@+id/search_public_transportation_underline"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/colorPrimary"></FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/advanced_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/advanced_search"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>

            <FrameLayout
                android:id="@+id/advanced_search_underline"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/colorPrimary"></FrameLayout>

        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/search_frame"
        android:layout_below="@+id/top_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</RelativeLayout>