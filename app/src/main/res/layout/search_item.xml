<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/list_item_back"
    android:layout_width="match_parent"
    android:id="@+id/item"
    android:layout_height="105dp">
    <!--105-->

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:background="#ff0000"
        android:contentDescription="@string/desc"
        android:scaleType="fitXY"
        android:src="@drawable/type_no_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:textSize="13.25sp"
        android:fontFamily="@font/notosanshebrewregular"
        android:text="ארנק חום מעור"
        android:textColor="@color/title_color"
        app:layout_constraintEnd_toStartOf="@+id/item_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/notosanshebrewregular"
        android:text="נמצא ארנק ברחוב בן יהודה"
        android:textSize="11sp"
        app:layout_constraintEnd_toStartOf="@+id/item_image"
        app:layout_constraintTop_toBottomOf="@+id/description" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:textSize="10sp"
        android:fontFamily="@font/notosanshebrewregular"
        android:text="תאריך 12.3.76"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_image" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/notosanshebrewregular"
        android:text="2.5 ק״מ"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>