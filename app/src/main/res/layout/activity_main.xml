<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fond.lost.losty.view.MainActivity">

    <TextView
        android:id="@+id/page_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginTop="74dp"
        android:fontFamily="@font/notosanshebrewregular"
        android:textColor="@color/title_color"
        android:textSize="20.5sp"/>

    <TextView
        android:id="@+id/top_button"
        android:layout_width="292dp"
        android:layout_height="58.5dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="56.5dp"
        android:background="@drawable/circular_textview"
        android:fontFamily="@font/notosanshebrewregular"
        android:gravity="center"
        android:textColor="@color/button_title_color"
        android:textSize="19.5sp"
        />

    <TextView
        android:id="@+id/lower_button"
        android:layout_width="292dp"
        android:layout_height="58.5dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="51.5dp"
        android:background="@drawable/circular_textview"
        android:fontFamily="@font/notosanshebrewregular"
        android:gravity="center"
        android:textColor="@color/button_title_color"
        android:textSize="19.5sp"
        />


    <LinearLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:background="@color/blue_1"
            android:paddingBottom="4dp"
            android:paddingLeft="28dp"
            android:paddingRight="17.5dp"
            android:paddingTop="5.5dp"
            android:text="@string/donate"
            android:textColor="@color/title_color"
            android:textSize="12.5sp"
            >
        </TextView>

        <LinearLayout
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:background="@color/blue_1"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="47.5dp"
                android:layout_height="47.5dp"
                android:layout_marginRight="74dp"
                android:src="@drawable/icon_fb"/>

            <ImageView
                android:layout_width="44.5dp"
                android:layout_height="47.5dp"
                android:src="@drawable/icon_whatsapp"/>

            <ImageView
                android:layout_width="46.5dp"
                android:layout_height="46dp"
                android:layout_marginLeft="74dp"
                android:src="@drawable/icon_mail"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
